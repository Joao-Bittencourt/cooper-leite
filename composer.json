{
    "name": "joao_bittencourt/cooper_leite",
    "type": "library",

    "require": {
        "php": ">=7.4",
        "clancats/hydrahon": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.5.0 || ^9.3"
    },
    "autoload": {
        "psr-4": {
            "core\\": "src/core/",
            "CooperLeite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CooperLeite\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.xml.dist"
    }
}
